*, *::after, *::before {
  box-sizing: border-box;
}

html, body {
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
}

body {
  font: 16px Helvetica, Arial, sans-serif;
}

.root,
.shell {
  height: 100%;
}

.shell {
  display: flex;
  flex-direction: column;
}

header,
footer {
  flex: 0 0 auto;
  z-index: 1;
}

main {
  flex: 1 1 auto;
  //position: relative;/* need this to position inner content */
}
